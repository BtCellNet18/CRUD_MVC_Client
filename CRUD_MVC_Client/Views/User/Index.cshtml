@model List<CrudApiClient.Models.UserResponse>
@{
	ViewData["Title"] = "Users";
}

<div class="container">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<div class="row">
				<div class="col-md-10">
					<h3>List Users</h3>
				</div>
				<div class="col-md-2">
					<a asp-action="Add" class="btn btn-success float-right">Add</a>
				</div>
			</div>
		</div>
		<div class="panel-body">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>ID</th>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Username</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var user in Model)
					{
					<tr>
						<td>@user.Id</td>
						<td>@user.FirstName</td>
						<td>@user.LastName</td>
						<td>@user.Username</td>
						<td>
							<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
						</td>
						<td>
							@{ var url = Url.Action("Delete", "User", new { id = user.Id }); }
							<button class="btn btn-danger" onclick="confirmDelete('@url')">Delete</button>
						</td>
					</tr>
					}
				</tbody>
			</table>
			<div class="modal">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h4 class="modal-title">Delete</h4>
							<button type="button" class="close" data-dismiss="modal">x</button>
						</div>
						<div class="modal-body">
							Are you sure?
						</div>
						<div class="modal-footer">
							<form id="frmDelete" method="post">
								<button class="btn btn-light" data-dismiss="modal">Cancel</button>
								<button type="submit" class="btn btn-danger">Delete</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/site.js"></script>
}